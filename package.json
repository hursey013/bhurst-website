{
  "private": true,
  "scripts": {
    "build": "rm -rf ./_site/ && webpack -p && bundle exec jekyll build",
    "deploy": "gh-pages -b master -d _site",
    "predeploy": "npm run build && echo 'bhurst.me' > ./_site/CNAME",
    "start": "concurrently \"npm:watch-*\"",
    "watch-jekyll": "bundle exec jekyll serve",
    "watch-webpack": "webpack --watch --mode=development"
  },
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "concurrently": "^3.6.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "gh-pages": "^1.1.0",
    "node-sass": "^4.9.0",
    "postcss": "^6.0.22",
    "postcss-loader": "^2.1.5",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "tailwindcss": "^0.6.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^3.0.8"
  }
}
